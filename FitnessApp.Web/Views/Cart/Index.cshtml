@model CartViewModel


<h3 class="display-4 text-center text-danger mb-3">Shopping Cart</h3>

@if (Model.CartItems.Count > 0)
{

	<table class="table text-white">
		<tr>
			<th>Product</th>
			<th>Quantity</th>
			<th></th>
			<th>Price</th>
			<th>Total</th>
		</tr>
		@foreach (var item in Model.CartItems)
		{
			<tr>
				<td>@item.ProductName</td>
				<td>@item.Quantity</td>
				<td>
					<a class="btn btn-primary btn-sm" asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductId">+</a>
					<a class="btn btn-info btn-sm" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProductId">-</a>
					<a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId">Remove</a>
				</td>
				<td>@item.Price.ToString("C2")</td>
				<td>@Model.CartItems.Where(x => x.ProductId == item.ProductId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>
			</tr>
		}
		<tr>
			<td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
		</tr>

		<tr>
			<td class="text-right" colspan="4">
				<a class="btn btn-danger" asp-action="Clear" asp-controller="Cart">Clear Cart</a>
				<a class="btn btn-primary" asp-action="Checkout" asp-controller="Cart">Checkout</a>
			</td>
		</tr>
	</table>
}
else
{
	<h3 class="display-4 text-center text-danger">Your cart is empty</h3>
}

